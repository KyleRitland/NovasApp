<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.AddFragment">

    <TextView
        android:id="@+id/add_textView_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_fragment"
        app:layout_constraintBottom_toTopOf="@+id/add_scrollView"
        />


    <ScrollView
        android:id="@+id/add_scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/add_textView_title"

        >

        <ImageButton
            android:id="@+id/treat"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="-24dp"
            android:src="@drawable/ic_dog_treat_green"
            />

        <ImageButton
            android:id="@+id/poop"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_dog_poop"
            />

        <ImageButton
            android:id="@+id/meal"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_dog_food_bowl_green"
            />

        <ImageButton
            android:id="@+id/pee"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_dog_pee" />

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>